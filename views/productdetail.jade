extends layout
block content

body

    div
    h1 Hats

    form(action='/', method='get')
        select(name='colorDropDown')
            each color in colors
                option(value='#{color}') #{color}
        input(type='submit' name='colorButton' value='Choose color')

    ul
        each hat in ecommerce
            li
                a(href='details/#{productSchema.name}') #{productSchema.name}

    if currentColor
        form(action'/' method='get')
            input(type='submit' name='clearButton' value='Clear selection')

                button.btn.btn-primary.btn-lg(type='submit') Add to Cart
